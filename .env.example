# Rails Environment
RAILS_ENV=development

# Server Configuration
PORT=3000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Secret Key Base (generate with: rails secret)
# IMPORTANT: Never commit the actual secret key to version control
SECRET_KEY_BASE=your_secret_key_base_here_use_rails_secret_to_generate

# JWT Configuration (used by devise-jwt)
# These are automatically managed by Rails credentials in production
# DEVISE_JWT_SECRET_KEY=your_jwt_secret_here

# Database Configuration (for production)
# DATABASE_URL=sqlite3:db/production.sqlite3

# Optional: Logging
# RAILS_LOG_LEVEL=debug
# RAILS_LOG_TO_STDOUT=true

# Optional: Rate Limiting Configuration
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
# RATE_LIMIT_LOGIN_PER_5MIN=5
# RATE_LIMIT_SIGNUP_PER_HOUR=3
