# Rails Environment
RAILS_ENV=development

# Server Configuration
PORT=3000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Secret Key Base (generate with: rails secret or use the one below)
# IMPORTANT: Never commit the actual secret key to version control
# For development, you can use the example key below:
SECRET_KEY_BASE=development_secret_key_base_for_local_use_only_do_not_use_in_production_generate_new_one_with_rails_secret

# JWT Configuration (used by devise-jwt)
# Optional: Specify a separate JWT secret key
# If not set, will use SECRET_KEY_BASE as fallback
# DEVISE_JWT_SECRET_KEY=your_jwt_secret_here

# Database Configuration (for production)
# DATABASE_URL=sqlite3:db/production.sqlite3

# Optional: Logging
# RAILS_LOG_LEVEL=debug
# RAILS_LOG_TO_STDOUT=true

# Optional: Rate Limiting Configuration
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
# RATE_LIMIT_LOGIN_PER_5MIN=5
# RATE_LIMIT_SIGNUP_PER_HOUR=3
